{
  "name": "auto-crosspost",
  "version": "0.1.0",
  "description": "TypeScript SDK for automatically cross-posting markdown/MDX blog posts to multiple platforms",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "crosspost": "./dist/cli/index.js",
    "crosspost-batch": "./dist/cli/batch.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepare": "npm run build",
    "check-modularity": "node scripts/check-modularity.js",
    "check-file-sizes": "find src -name '*.ts' -exec wc -l {} + | sort -nr | head -20",
    "enforce-modularity": "npm run check-modularity && npm run lint",
    "pre-commit": "npm run enforce-modularity && npm run test",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "blog",
    "cross-post",
    "devto",
    "hashnode",
    "markdown",
    "mdx",
    "typescript",
    "sdk"
  ],
  "author": "Rohith",
  "license": "MIT",
  "dependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "chokidar": "^4.0.3",
    "commander": "^11.1.0",
    "dotenv": "^16.3.0",
    "graphql": "^16.8.0",
    "graphql-request": "^6.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "node-cron": "^4.2.1",
    "p-limit": "^6.2.0",
    "remark": "^15.0.0",
    "remark-html": "^16.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^20.19.7",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0",
    "vitepress": "^1.6.3"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
